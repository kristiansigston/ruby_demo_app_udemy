<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @article %>
      <%= form_with(model: @article, class: "shadow mb-3 p-3 bg-info rounded", local:true) do |f| %>
        <div class="form-group row">
          <%= f.label :title, class:"col-2 col-form-label text-light"%>
          <div class="col-10">
            <%= f.text_field :title, class:"form-control", placeholder: "Title of Article"%>
          </div>
        </div>
        <div class="form-group row">  
          <%= f.label :description, class:"col-2 col-form-label text-light"%>
          <div class="col-10">
            <%= f.text_area :description, rows: 10, class:"form-control shadow rounded", placeholder: "Description of Article"%>
          </div>
        </div>
        <div class="form-group row justify-content-center">
          <p><%= f.submit, class: "btn btn-outline-light btn-lg shadow rounded"%></p>
        </div>
      <% end %>
    </div>
    <div class="mb-3">
      <%= link_to '[ Cancel and return to articles listing ]', articles_path, class:"text-info" %>
    </div>
  </div>
</div>
